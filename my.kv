<UpPic>:
    cols:1
    FileChooserListView:
        id: Fc
        filters:['*.png', '*.jpg', '*.pdf', '*.img']
    Button:
        text:'Upload'
        size_hint_y: None
        height:'35dp'
        on_press: root.upload(Fc.path, Fc.selection)

<LandId>:
    cols:2
    padding:10
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            size: self.size
            pos: self.pos
    size_hint_y:None
    height:'120dp'
    MyTitle:
        text:'Land ID: '
        size_hint_y:None
        height:'40dp'
    MDTextField:
        hint_text:"The id of the land"
        on_text_validate:root.printer()
        id:land_id
        size_hint_y:None
        height:'40dp'
    Button:
        text:'Ok'
        on_press:root.printer()
        size_hint_y:None
        height:'40dp'