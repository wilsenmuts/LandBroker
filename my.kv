                        bar_width: 3
                        bar_color: .7, .2, .2, 1
                        BoxLayout:
                            id: box
                            size_hint_y: None
                            height: self.minimum_height
                            spacing:5
                            orientation:'vertical'
                            padding:10
                            MyLabel:
                                text:'List of Land for Sale'
                                size_hint:(1, None)
                                height:'40dp'



