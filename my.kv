<MyLabel>:
    markup:True
    text_size: self.size
    halign:'center'
    valign:'center'
    color: .1, .4, .1, 1
<MyTitle>:
    markup:True
    text_size: self.size
    halign:'center'
    valign:'center'
    color: .2, .4, .2, .9
    bold: True

<MyCard>:
    orientation:'vertical'
    size_hint: None, None
    height: root.height/4
    width: root.width/2.5
    allow_stretch: True
    keep_ratio:False
    elevation: 6
    Image:
        source:'./black.jpg'
        allow_stretch: True
        keep_ratio: True
    MDRaisedButton:
        text:'Buy Equipment'
        icon:'cash'
        size_hint_x:None
        width:root.width/2.5
        md_bg_color:.5, .2, .2, 1
        on_press: root.items()

<TextInput>:
    cursor_color:0,0,0,.9
    cursor_width:'2sp'
    #padding:[5,0,5,0]
RootScreen:
    id:scr_mng
    LoginScreen:
    ActivityScreen:

<LoginScreen>:
    name:'login'
    BoxLayout:
        orientation:'vertical'
        padding:10
        MDLabel:
            text:'LandBroker Ug'
            font_size:'35dp'
            size_hint_y: None
            height:root.height/3
            color:app.theme_cls.primary_color
            halign: 'center'

        GridLayout:
            cols:2
            size_hint_y:None
            height:root.height/3
            spacing:5
            padding:20
            MDLabel:
                text:'[b]Username[/b]:'
                markup:True
                size_hint_y:None
                height:'35dp'
                color:app.theme_cls.primary_color
            MDTextField:
                hint_text:'your username'
                id: uname
                max_text_length:15
                color_mode:'accent'
                line_color_normal: .2, .7, .2, .9
                size_hint_y:None
                height:'35dp'
                on_text_validate: root.login()
            MDLabel:
                text:'[b]Password[/b]:'
                markup:True
                size_hint_y:None
                height:'35dp'
                color:app.theme_cls.primary_color
            MDTextField:
                hint_text:'your password'
                id:pswd
                password:True
                max_text_length:15
                line_color_normal: .2, .7, .2, .9
                color_mode:'accent'
                size_hint_y:None
                height:'35dp'
                on_text_validate: root.login()
            MDRectangleFlatIconButton:
                text:'Login'
                icon:'key'
                on_release: root.login()
            MDRectangleFlatIconButton:
                text:'Sign Up'
                icon:'web'
                on_release:root.signup()

        MDRaisedButton:
            pos_hint:{'center_x':.5}
            text:'Forgot Passward'
            increment_width:100
            icon:'email-outline'
            padding: 10, 10
            on_press: root.login()
        GridLayout:
            cols:1
            MyLabel:
                text:'[b]MADE BY MUBOSOFT[/b]'
                size_hint_y:None
                height:'40dp'


<ActivityScreen>:
    name:'activity'
    BoxLayout:
        orientation:'vertical'
        MDToolbar:
            id: toolbar
            title: 'LandBroker Ug'
            md_bg_color: app.theme_cls.primary_color
            left_action_items: [['cash', lambda x: '']]
        MDBottomNavigation:
            id: panel
            MDBottomNavigationItem:
                name: 'files1'
                text: 'Buy Land'
                icon: 'cart-arrow-down'
                BoxLayout:
                    orientation:'vertical'
                    padding:5
                    ScrollView:
                        id: refresh_layout
                        #refresh_callback: app.refresh_callback
                        #root_layout: root
