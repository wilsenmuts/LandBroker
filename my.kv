<MyLabel>:
    markup:True
    text_size: self.size
    halign:'center'
    valign:'center'
    color: .2, .4, .2, .9
<MyTitle>:
    markup:True
    text_size: self.size
    halign:'center'
    valign:'center'
    color: .2, .4, .2, .9
    bold: True

<MyCard>:
    orientation:'vertical'
    size_hint: None, None
    height: root.height/4
    width: root.width/2.5
    allow_stretch: True
    keep_ratio:False
    elevation: 6
    Image:
        source:'./black.jpg'
        allow_stretch: True
        keep_ratio: True
    MDRaisedButton:
        text:'Buy Equipment'
        icon:'cash'
        size_hint_x:None
        width:root.width/2.5
        md_bg_color:.5, .2, .2, 1
        on_press: root.items()

RootScreen:
    id:scr_mng
    LoginScreen:
    ActivityScreen:

<LoginScreen>:
    name:'login'
    BoxLayout:
        orientation:'vertical'
        MDLabel:
            text:'[color=#234523]LandBroker Ug[/color]'
            font_size:'35dp'
            size_hint_y: None
            height:'60dp'
            markup: True
            halign: 'center'
        MDLabel:
            text: 'Login'
            id: login
            halign: 'center'
            size_hint_y: None
            height:'45dp'
        GridLayout:
            cols:2
            size_hint:(None,None)
            height:'180dp'
            spacing:5
            padding:5
            width:root.width
            MDLabel:
                text:'[color=#234567]Username[/color]:'
                markup:True
                size_hint_y:None
                height:'35dp'
            MDTextField:
                hint_text:'your username'
                id: uname
                max_text_length:15
                color_mode:'accent'
                line_color_normal: .2, .7, .2, .9
                size_hint_y:None
                height:'35dp'
                on_text_validate: root.login()
            MDLabel:
                text:'[color=#234567]Password[/color]:'
                markup:True
                size_hint_y:None
                height:'35dp'
            MDTextField:
                hint_text:'your password'
                id:pswd
                password:True
                max_text_length:15
                line_color_normal: .2, .7, .2, .9
                color_mode:'accent'
                size_hint_y:None
                height:'35dp'
                on_text_validate: root.login()
            MDFillRoundFlatIconButton:
                text:'Login'
                icon:'key'
                size_hint_x: 1
                md_bg_color: .2, .4, .2, 1
                on_release: root.login()
            MDFillRoundFlatIconButton:
                text:'Sign Up'
                icon:'web'
                size_hint_x: 1
                md_bg_color: .2, .4, .2, 1
                on_release:root.signup()

        MDRoundFlatIconButton:
            text:'[color=#225511]Forgot Passward[/color]'
            markup:True
            icon:'email-outline'
            halign:'center'
            padding: 10, 10
            valign:'center'
            halign:'center'
            size_hint_x:None
            width:root.width
            on_press: root.login()
        GridLayout:
            cols:1
            MyLabel:
                text:'[color=#225511]MADE BY MUBOSOFT[/color]'
                size_hint_y:None
                height:'40dp'


<ActivityScreen>:
    name:'activity'
    BoxLayout:
        orientation:'vertical'
        MDToolbar:
            id: toolbar
            title: 'LandBroker Ug'
            md_bg_color: .2, .5, .2, .9
            left_action_items: [['cash', lambda x: '']]
        MDBottomNavigation:
            id: panel
            MDBottomNavigationItem:
                name: 'files1'
                text: 'Buy Land'
                icon: 'cart-arrow-down'

                ScrollView:
                    id: refresh_layout
                    #refresh_callback: app.refresh_callback
                    #root_layout: root
                    bar_inactive_color: .2,.5, .2, 1
                    bar_width: 3
                    bar_color: .7, .2, .2, 1
                    GridLayout:
                        id: box
                        size_hint_y: None
                        height: self.minimum_height
                        spacing:5
                        cols: 1
                        padding:10
                        MyLabel:
                            text:'List of Land for Sale'
                            size_hint:(1, None)
                            height:'40dp'
                        MyLabel:
                            text:'You only have to pay for the land after you have received its instruments of power. All the land, sold on this platform is genuine. Forget the scruplous sellers, try LandBroker Ug.'
                            text_size: self.size
                            halign:'auto'
                            size_hint_y: None
                            height: '100dp'
                            bold:True
                GridLayout:
                    cols:2
                    size_hint_height:None
                    height:'45dp'
                    spacing:5
                    padding:5
                    MDFillRoundFlatIconButton:
                        text:'Re-Load'
                        icon:'reload'
                        md_bg_color: .7, .2, .2, 1
                        size_hint_x: .4
                        on_release:
                            root.show_more()
                    MDFillRoundFlatIconButton:
                        text:'Back to top'
                        icon:'arrow-up-bold'
                        md_bg_color: .7, .2, .2, 1
                        size_hint_x: .4
